{
  "name": "ywt-attendance",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "dist": "electron-builder",
    "dist:linux": "electron-builder --linux",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "publish": "electron-builder --publish always"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.ywt.attendance",
    "productName": "YWT Attendance",
    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/.cache"
    ],
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icon.png"
    }
  }
}
